@{
    ViewData["Title"] = "Orders addition statistics";
}
<dx-pie-chart>
    <datasource load-action="OrdersAddedValue" />
    <series argument-field="Author" value-field="Count">
        <label visible="true" position="DevExtreme.AspNet.TagHelpers.PieChartLabelPosition.Outside" background-color="transparent" />
    </series>

    <title text="Orders added"></title>
    <legend vertical-alignment="Bottom" horizontal-alignment="Center" />
    <tooltip enabled="true" />
</dx-pie-chart>
<dx-data-grid>
    <datasource load-action="OrdersAddedDetail" />
    <column datafield="Author" caption="Author">
    </column>
    <column datafield="Time" caption="Added on">
    </column>
</dx-data-grid>

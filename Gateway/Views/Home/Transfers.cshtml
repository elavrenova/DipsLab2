@model System.Collections.Generic.List<string>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    List<TransferModel> transfLst = ViewBag.transfList;
}
<script src="~/js.js"></script>
<hr />
<h2>Transfers</h2>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <label>Choose quantity of elements on page</label>
    </div>
    <div class="col-md-2">
        <select class="form-control" name="state" id="maxRows">
            <option value="500">Show ALL Rows</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>
    <div class="col-md-4"></div>
</div>
<hr />
<table id="MyTable" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Transfer</th>
            <th>Carrying</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in transfLst)
        {
            <tr>
                <td>@l.Name</td>
                <td>@l.Carrying</td>
                <td>
                    @if (l.Status == 1)
                    {
                        <span class="text-danger">busy</span>
                    }
                    else
                    {
                        <span class="text-success">free</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<ul class="pagination"></ul>
<hr/>
<a asp-action="Index" class="btn btn-primary">Go to main page</a>

@section Scripts
    {
    <script type="text/javascript">
        getPagination('.table');
    </script>

}

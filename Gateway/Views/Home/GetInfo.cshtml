<hr/>
<h3>Transfers</h3>
<hr/>
<table id="MyTable2" class="table table-striped table-bordered table-condensed">
    <thead>
    <tr>
        <th>Transfer</th>
        <th>Carrying</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var l in transferLst)
    {
        <tr>
            <td>@l.Name</td>
            <td>@l.Carrying</td>
            <td>
                @if (l.Status == 1)
                {
                    <span class="text-danger">busy</span>
                }
                else
                {
                    <span class="text-success">free</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<ul class="pagination" id="transfPag"></ul>

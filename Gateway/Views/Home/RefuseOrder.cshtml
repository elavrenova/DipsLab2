@model StockTransferOrderModel

@{
    ViewBag.Title = "Refusing order";
    Layout = "_Layout";
}
<hr/>
<div class="form-horizontal">
    <form asp-controller="Home" asp-action="RefuseOrder" method="post">
        <div class="form-group">
            <label asp-for="StockId" class="col-md-2 control-label"></label>
            <select asp-for="StockId" asp-items="@ViewBag.stockList" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="TransferId" class="col-md-2 control-label"></label>
            <select asp-for="TransferId" asp-items="@ViewBag.transfList" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="Value" class="control-label col-md-2"></label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <input asp-for="Username" value="@Model.Username" width="0" height="0" style="visibility:collapse" />
        <div class="row">
            <div class="col-md-2">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-danger">Reject</a>
            </div>
            <div class="col-md-8"></div>
        </div>
    </form>
</div>
<hr/>
<a asp-action="Index" class="btn btn-primary">Go to main page</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @* переопределение валидации на стороне клиента *@
    <script type="text/javascript" src="~/js/NumberConvert.js"></script>
}

